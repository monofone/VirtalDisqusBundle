<script type="text/javascript">
    var disqus_shortname = '{{ disqus_shortname }}';
    var disqus_developer = {{ disqus_developer }};
    {% if disqus_identifier is defined %}
    var disqus_identifier = '{{ disqus_identifier }}';
    {% endif %}
    {% if disqus_url is defined %}
    var disqus_url = '{{ disqus_url }}';
    {% endif %}
    {% if disqus_title is defined %}
    var disqus_title = '{{ disqus_title }}';
    {% endif %}

    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>